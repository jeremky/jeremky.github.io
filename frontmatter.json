{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "hugo",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.publicFolder": "[[workspace]]/content",
  "frontMatter.content.pageFolders": [
    {
      "title": "posts",
      "path": "[[workspace]]/content/posts",
      "filePrefix": ""
    }
  ],
  "frontMatter.website.host": "https://jeremky.github.io",
  "frontMatter.framework.startCommand": "hugo server -D",
  "frontMatter.custom.scripts": [
    {
      "title": "Générer le site",
      "id": "hugoscript",
      "script": "[[workspace]]/hugo.sh",
      "command": "/bin/bash"
    }
  ],
  "frontMatter.panel.actions.disabled": [
    "createContent",
    "optimizeSlug",
    "openOnWebsite"
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": "posts",
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "useRelativeCover",
          "name": "useRelativeCover",
          "type": "boolean"
        },
        {
          "title": "cover",
          "name": "cover",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "toc",
          "name": "toc",
          "type": "boolean"
        },
        {
          "title": "draft",
          "name": "draft",
          "type": "draft"
        }
      ]
    }
  ],
  "frontMatter.snippets.wrapper.enabled": false,
  "frontMatter.content.snippets": {
    "Image": {
      "description": "Ajouter une image",
      "body": "{{< image src=\"[[image]]\" style=\"border-radius: 8px;\" >}}",
      "fields": [
        {
          "name": "image",
          "title": "Image",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    },
    "Code": {
      "description": "Ajouter du code",
      "body": [
        "{{< code language=\"[[code]]\" title=\"[[titre]]\" id=\"1\" expand=\"Afficher\" collapse=\"Cacher\" isCollapsed=\"true\" >}}",
        "",
        "{{< /code >}}"
      ],
      "fields": [
        {
          "name": "code",
          "title": "Langage",
          "type": "choice",
          "choices": [
            "bash",
            "vim",
            "yml"
          ],
          "default": "bash"
        },
        {
          "name": "titre",
          "title": "Titre",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    }
  }
}
